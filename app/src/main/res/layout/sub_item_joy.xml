<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_middle"
    android:paddingBottom="@dimen/padding_middle"
    android:paddingLeft="@dimen/padding_small"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_home_joy"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_newbee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_home_joy"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small">

        <TextView
            android:id="@+id/newbee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手体验" />

        <TextView
            android:id="@+id/newbee_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全天时间段开放"
            android:textColor="@color/textColorLight" />
    </LinearLayout>
</RelativeLayout>