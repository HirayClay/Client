<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemRootLayoutPaddingStyle"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/text_my_coin"
        android:text="我的趣币"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/coin_number"
        android:textColor="@color/colorOrange"
        tools:text="1000000"
        android:layout_toRightOf="@+id/text_my_coin"
        android:drawableRight="@mipmap/ic_coin"
        android:drawablePadding="@dimen/padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/exchange_bean"
        android:text="兑换趣豆"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/colorBrown"
        android:layout_alignParentRight="true"
        android:background="@drawable/solid_yellow_oval_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>