<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/h5game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/h5game"
        android:gravity="center_horizontal"
        android:text="H5游戏"/>
    <TextView
        android:id="@+id/daily_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/share"
        android:gravity="center_horizontal"
        android:text="每日分享"/>
    <TextView
        android:id="@+id/trade_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/trade_market"
        android:gravity="center_horizontal"
        android:text="兑换商城"/>
    <TextView
        android:id="@+id/guess_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/guess_board"
        android:gravity="center_horizontal"
        android:text="竞猜榜单"/>
</LinearLayout>