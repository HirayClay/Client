<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cjj="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiqu.client.ui.account.LoginActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Overlay">

        <com.jiqu.client.widget.CenterTitleToolbar
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            cjj:title="登录" />
    </android.support.design.widget.AppBarLayout>

    <!--用户名/手机号-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/page_start_spacing"
        android:hint="用户名/手机号"
        cjj:theme="@style/TextInputEditText">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@mipmap/icon_mine"
            android:drawablePadding="8dp" />
    </android.support.design.widget.TextInputLayout>

    <!--登录密码-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/page_start_spacing"
        android:hint="请输入密码"
        cjj:theme="@style/TextInputEditText">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="8dp" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jiqu.client.widget.SpanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="还没账号？{立即注册}"
            cjj:spanColor="@color/lightBlue" />

        <com.jiqu.client.widget.SpanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码？"
            cjj:spanColor="@color/lightBlue" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/solid_blue_bar_bg"
        android:gravity="center"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <!--第三方登录-->
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_toLeftOf="@+id/text_third_login"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/divider_gray"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/text_third_login"
            android:text="第三方账号登录"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_toRightOf="@+id/text_third_login"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:background="@color/divider_gray"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_qq_login"
            android:scaleType="fitXY"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:src="@mipmap/icon_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_weixin_login"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:scaleType="fitXY"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:src="@mipmap/icon_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_weibo_login"
            android:scaleType="fitXY"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:src="@mipmap/icon_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
