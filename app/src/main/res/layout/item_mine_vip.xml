<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    style="@style/ItemRootLayoutPaddingStyle">


    <TextView
        android:id="@+id/text_my_vip"
        android:text="我的VIP："
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rank_icon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/text_my_vip"
        android:background="@mipmap/icon_rank"
        android:gravity="center"
        android:text="V"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/vip"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@id/rank_icon"
        android:paddingLeft="2dp"
        android:background="@mipmap/v_bg"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:text="VIP1"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/get_vip_paid"
        android:text="领取VIP工资"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/colorBrown"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/solid_yellow_oval_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>