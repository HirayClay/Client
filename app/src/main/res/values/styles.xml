<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/appPrimary</item>-->
        <!--<item name="android:textColor">@color/appTextPrimary</item>-->

        <!--标题属性设置-->
        <item name="navigationIcon">@mipmap/icon_nav_back</item>
        <item name="titleTextColor">@android:color/white</item>
        <!--Menu属性设置-->
        <item name="android:actionMenuTextAppearance">@style/ToolBarTextAppearance</item>
    </style>

    <style name="ToolBarTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
        <!--<item name="android:actionMenuTextColor">@color/newAppPrimary</item>-->
    </style>

    <style name="AppTheme.Overlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextInputEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <!--<item name="colorAccent">#3498db</item>-->
        <item name="android:textColorHint">#ccc</item>
        <item name="colorControlNormal">#ccc</item>
        <item name="colorControlActivated">@color/lightBlue</item>
        <item name="colorControlHighlight">@color/lightBlue</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItemRootLayoutPaddingStyle">
        <item name="android:paddingLeft">@dimen/page_border_padding</item>
        <item name="android:paddingRight">@dimen/page_border_padding</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>
</resources>
